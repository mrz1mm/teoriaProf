@model W2.D4.BlogWebApp.Models.ArticleInputModel

@{
    ViewData["Title"] = "WriteArticle";
}

<h1>WriteArticle</h1>

<h4>ArticleInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WriteArticle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
