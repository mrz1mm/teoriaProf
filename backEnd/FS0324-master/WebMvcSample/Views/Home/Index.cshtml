@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">ASP.NET MVC</h1>
    </section>

    <div class="row">
        <section class="offset-3 col-6">
            @using (Html.BeginForm(actionName: "Calculate", controllerName: "Home", method: FormMethod.Post))
            {
            <label>Primo Operando</label>
            <input type="number" name="first" />
            <select name="operation">
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
            </select>
            <input type="number" name="second" />
            <button>Calcola</button>
            }
        </section>
    </div>
</main>